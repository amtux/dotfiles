# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

# essential stuff tweaked from zsh-newuser
HISTFILE=~/.zhistory
HISTSIZE=10000
SAVEHIST=100000
setopt autocd beep extendedglob nomatch notify interactivecomments

# history improvements
# - timestamp in history
# - write to history right away
# - share history
setopt extended_history inc_append_history sharehistory

# vi mode + no delay when switching
bindkey -v
KEYTIMEOUT=1
bindkey '^R' history-incremental-search-backward

# The following lines were added by compinstall
zstyle :compinstall filename '/home/amtux/.zshrc'

autoload -Uz compinit
compinit
# End of lines added by compinstall

# colorful man pages
export LESS_TERMCAP_mb=$'\E[01;32m'
export LESS_TERMCAP_md=$'\E[01;32m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;47;34m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;36m'
export LESS=-r

# aliases
alias vim='nvim'
alias v='nvim'
alias k='kubectl'
alias i='istioctl'
alias d='docker'
alias p='sudo pacman'
alias kctx='kubectx'
alias sshot='scrot -q 100 ~/Pictures/screenshots/%Y%m%d_%H%M%S.png'
alias ls='exa -l --git'
alias l='exa -la --git'
alias sudo='sudo '


# load git aliases
source "$(eval echo ~$USER)/dotfiles/zsh/git.zsh"

#[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh
#export FZF_DEFAULT_COMMAND='rg --files --no-ignore --hidden --follow -g "!{.git,node_modules}/*" 2> /dev/null'


# load antibody plugins
source ~/.zsh_plugins.sh

# To customize prompt, run `p10k configure` or edit ~/.p10k.zsh.
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh
